# Deny all direct access to storage files
Options -Indexes
Deny from all

# Block all file types
<FilesMatch ".*">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Extra protection for JSON files
<FilesMatch "\.(json)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block PHP execution in this directory
<FilesMatch "\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
